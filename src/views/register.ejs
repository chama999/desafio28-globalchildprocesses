<%- include('partials/header'); -%>
    <div id="#login" class="container mt-dark">
        <div class="jumbotron">
            <h1>Bienvenido,
                <small class="text-muted"> por favor ingrese sus datos</small>
            </h1>
            <br>
            <fieldset>
            <legend>Registro</legend>
            <div class="form-control">
                <form action="/register" method="post" autocomplete="off">
                    <label class="form-label mt-4" for="name">Nombre</label>
                    <div class="form-floating mb-3">
                      <input class="form-control" type="text" id="name" name="name" placeholder="Nombre" required/>
                      <label for="name">Ingrese su nombre</label>
                    </div>
                    <label class="form-label mt-4" for="mail">Ingrese su mail  <small class="text-muted"> (Se utilizará como Usuario) </small></label>
                    <div class="form-floating mb-3">
                      <input class="form-control" type="mail" id="mail" name="mail" placeholder="ejemplo@dominio.com" required/>
                      <label for="mail">Ingrese su mail</label>
                    </div>
                    <label class="form-label mt-4" for="password">Contraseña <small class="text-muted"> (Mínimo: 8 caracteres.)</small></label>
                    <div class="form-floating mb-3">
                      <input class="form-control" type="password" id="password" name="password" placeholder="ejemplo@dominio.com" required/>
                      <label for="password">Contraseña</label>
                    </div>
                    <label class="form-label mt-4" for="age">Edad</label>
                    <div class="form-floating mb-3">
                      <input class="form-control" type="text" id="age" name="age" placeholder="18" required/>
                      <label for="age">Ingrese su edad</label>
                    </div>
                    <button class="btn btn-success mt-3">Registrarse</button>
                </form>
            </div>
            <div>
                <a href="/login">Iniciar Sesion</a>
            </div>
    </div>
<%- include('partials/footer'); -%>